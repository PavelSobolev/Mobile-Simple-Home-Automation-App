<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main"
    tools:showIn="@layout/activity_main">

    <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hue of color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.027" android:textStyle="bold" android:textSize="18sp"
            android:paddingLeft="10dp" android:paddingBottom="5dp" android:id="@+id/ApplyHue"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/Brightness"
            android:visibility="invisible"/>
    <SeekBar
            android:layout_width="334dp"
            android:layout_height="0dp"
            android:id="@+id/Brightness" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/brightnessText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:max="100" android:hapticFeedbackEnabled="true" android:visibility="invisible"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Receiving the bulb status"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintVertical_bias="0.032" android:textStyle="bold" android:textSize="18sp"
            android:paddingLeft="10dp" android:paddingBottom="5dp" android:id="@+id/brightnessText"/>
    <SeekBar
            android:layout_width="334dp"
            android:layout_height="0dp"
            android:id="@+id/Hue" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ApplyHue" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:max="360" android:hapticFeedbackEnabled="true" android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>